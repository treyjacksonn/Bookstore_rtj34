@page
@model Bookstore_rtj34.Pages.CartModel
@{
}

<h1>Cart</h1>

<!--Outlines table columns-->
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>Subcost</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var i in Model.basket.Items) 
        { 
            <tr>
                <!--Accessing the info from the user book selection that is stored in Basket.cs
                    Info is passed to this page through the variables Book and Items-->
                <td>@i.Book.Title</td>
                <td>@i.Quantity</td>
                <td>@i.Book.Price</td>
                <td>@((i.Quantity * i.Book.Price).ToString("C"))</td>

                <td class="text-center">
                    <form method="post" asp-page-handler="Remove">
                        <input type="hidden" name="bookId" value="@i.Book.BookId"/>
                        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                        <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                    </form>

                </td>

            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <!---Calling the CalculateTotal to dynamically determine the total cost of the user's basket-->
            <td colspan="3">Total:</td>
            <td>@Model.basket.CalculateTotal().ToString("C")</td>
        </tr>
    </tfoot>
</table>

<!--Connected to the ReturnUrl Model which takes the user back to the page that they were on when they added the book-->
<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
    <a class="btn btn-primary" asp-controller="Checkout" asp-action="Checkout" >Checkout</a>
</div>

