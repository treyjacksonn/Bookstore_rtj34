@{

    @model IEnumerable<string>

}
<!--building the routes used in the website-->
<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-bookCat="" asp-route-pageNum="1" class="btn btn-secondary">Home</a>

    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCat="@t" asp-route-pageNum="1"
           class="btn @(ViewBag.SelectedCat == t ? "btn-primary":"btn btn-secondary")">@t</a>

    }
</div>